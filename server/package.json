{
  "name": "generous-share-server",
  "version": "0.1.0",
  "description": "Git based server backend for the Generous Share app",
  "repository": {
    "type": "git",
    "url": "https://github.com/generouslabs/share.git"
  },
  "author": "Generous Labs",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "copy:clean": "rimraf static/* && mkdirp static/expo && mkdirp static/website",
    "copy:expo": "ncp ../expo/dist static/expo --stopOnErr",
    "copy:website": "ncp ../website/out static/website --stopOnErr",
    "copy": "yarn copy:clean && yarn copy:expo && yarn copy:website",
    "build": "yarn lint && yarn build-ts",
    "build-ts": "ncc build src/server.ts -o dist",
    "debug": "yarn build && yarn watch-debug",
    "format": "prettier --write src/",
    "lint": "yarn format && tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/",
    "serve-debug": "nodemon --inspect dist/",
    "start": "yarn build && yarn serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-node": "nodemon dist/",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "ncc build --watch src/server.ts -o dist"
  },
  "dependencies": {
    "@chmac/node-git-server": "^0.6.3",
    "async": "^3.1.0",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "human-id": "^2.0.1",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.19",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.23.0",
    "@types/async": "^3.0.2",
    "@types/bluebird": "^3.5.27",
    "@types/chai": "^4.2.3",
    "@types/concurrently": "^5.2.1",
    "@types/cors": "^2.8.9",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.16",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.141",
    "@types/node": "^14.14.10",
    "@types/shelljs": "^0.8.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vercel/ncc": "^0.27.0",
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  }
}
